<div id="<%= dom_id ingredient %>">
  <p>
    <strong>Recipe:</strong>
    <%= ingredient.recipe_id %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= ingredient.name %>
  </p>

  <p>
    <strong>Quantity:</strong>
    <%= ingredient.quantity %>
  </p>

  <p>
    <strong>Unit:</strong>
    <%= ingredient.unit %>
  </p>

  <p>
    <strong>Notes:</strong>
    <%= ingredient.notes %>
  </p>

</div>
